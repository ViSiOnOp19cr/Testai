{
    "name": "tstai-cli",
    "version": "1.0.4",
    "description": "TSTAI - AI-powered natural language API testing CLI with custom API key authentication. Write tests in plain English and run them via CLI.",
    "main": "src/index.js",
    "bin": {
        "tstai": "bin/tstai.js"
    },
    "type": "module",
    "scripts": {
        "dev": "node bin/tstai.js",
        "test": "node bin/tstai.js run",
        "test:traditional": "mocha tests/example.traditional.js"
    },
    "keywords": [
        "api-testing",
        "ai-testing",
        "cli",
        "automation",
        "natural-language",
        "testing-framework",
        "api-key-authentication"
    ],
    "author": "Chandan C R",
    "license": "MIT",
    "dependencies": {
        "axios": "^1.7.4",
        "chalk": "^5.3.0",
        "commander": "^12.0.0",
        "dotenv": "^17.2.3"
    },
    "engines": {
        "node": ">=18"
    },
    "devDependencies": {
        "chai": "^6.2.0",
        "mocha": "^11.7.4",
        "supertest": "^7.1.4"
    }
}
